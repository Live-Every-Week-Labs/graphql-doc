{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "outputDir": {
      "type": "string",
      "default": "./docs/api"
    },
    "framework": {
      "type": "string",
      "enum": ["docusaurus"],
      "default": "docusaurus"
    },
    "singlePage": {
      "type": "boolean",
      "default": false
    },
    "metadataDir": {
      "type": "string",
      "default": "./docs-metadata"
    },
    "examplesDir": {
      "type": "string"
    },
    "errorsDir": {
      "type": "string"
    },
    "includeDeprecated": {
      "type": "boolean",
      "default": true
    },
    "typeLinkMode": {
      "type": "string",
      "enum": ["none", "deep", "all"],
      "default": "none"
    },
    "excludeDocGroups": {
      "oneOf": [
        { "type": "string" },
        {
          "type": "array",
          "items": { "type": "string" }
        }
      ],
      "default": []
    },
    "sidebarCategoryIndex": {
      "type": "boolean",
      "default": false
    },
    "sidebarSectionLabels": {
      "type": "object",
      "properties": {
        "operations": { "type": "string" },
        "types": { "type": "string" }
      },
      "default": {
        "operations": "Operations",
        "types": "Types"
      }
    },
    "introDocs": {
      "type": "array",
      "items": {
        "oneOf": [
          {
            "type": "string"
          },
          {
            "type": "object",
            "properties": {
              "source": { "type": "string" },
              "outputPath": { "type": "string" },
              "id": { "type": "string" },
              "label": { "type": "string" },
              "title": { "type": "string" }
            },
            "required": ["source"]
          }
        ]
      },
      "default": []
    },
    "skipTypes": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "default": []
    },
    "generateSidebar": {
      "type": "boolean",
      "default": true
    },
    "sidebarFile": {
      "type": "string"
    },
    "typeExpansion": {
      "type": "object",
      "properties": {
        "maxDepth": {
          "type": "number",
          "default": 5
        },
        "defaultLevels": {
          "type": "number",
          "default": 2
        },
        "showCircularReferences": {
          "type": "boolean",
          "default": true
        }
      },
      "default": {}
    }
  }
}
