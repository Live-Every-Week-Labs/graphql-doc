{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "outputDir": {
      "type": "string",
      "default": "./docs/api"
    },
    "framework": {
      "type": "string",
      "default": "docusaurus"
    },
    "metadataDir": {
      "type": "string",
      "default": "./docs-metadata"
    },
    "examplesDir": {
      "type": "string"
    },
    "schemaExtensions": {
      "oneOf": [
        { "type": "string" },
        {
          "type": "array",
          "items": { "type": "string" }
        }
      ],
      "default": []
    },
    "allowRemoteSchema": {
      "type": "boolean",
      "default": false
    },
    "includeDeprecated": {
      "type": "boolean",
      "default": true
    },
    "excludeDocGroups": {
      "oneOf": [
        { "type": "string" },
        {
          "type": "array",
          "items": { "type": "string" }
        }
      ],
      "default": []
    },
    "skipTypes": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "default": []
    },
    "typeExpansion": {
      "type": "object",
      "properties": {
        "maxDepth": {
          "type": "number",
          "default": 5
        },
        "defaultLevels": {
          "type": "number",
          "default": 0
        },
        "showCircularReferences": {
          "type": "boolean",
          "default": true
        }
      },
      "default": {}
    },
    "llmDocs": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": true
        },
        "outputDir": {
          "type": "string",
          "default": "llm-docs"
        },
        "strategy": {
          "type": "string",
          "enum": ["single", "chunked"],
          "default": "chunked"
        },
        "includeExamples": {
          "type": "boolean",
          "default": true
        },
        "generateManifest": {
          "type": "boolean",
          "default": true
        },
        "singleFileName": {
          "type": "string",
          "default": "api-reference.md"
        },
        "maxTypeDepth": {
          "type": "number",
          "minimum": 1,
          "maximum": 5,
          "default": 3
        },
        "baseUrl": {
          "type": "string"
        },
        "apiName": {
          "type": "string"
        },
        "apiDescription": {
          "type": "string"
        }
      },
      "default": {}
    },
    "adapters": {
      "type": "object",
      "properties": {
        "docusaurus": {
          "type": "object",
          "properties": {
            "singlePage": {
              "type": "boolean",
              "default": false
            },
            "docsRoot": {
              "type": "string",
              "default": "./docs"
            },
            "docIdPrefix": {
              "type": "string"
            },
            "unsafeMdxDescriptions": {
              "type": "boolean",
              "default": false
            },
            "typeLinkMode": {
              "type": "string",
              "enum": ["none", "deep", "all"],
              "default": "none"
            },
            "llmDocsBasePath": {
              "type": "string"
            },
            "generateSidebar": {
              "type": "boolean",
              "default": true
            },
            "sidebarFile": {
              "type": "string"
            },
            "sidebarCategoryIndex": {
              "type": "boolean",
              "default": false
            },
            "sidebarMerge": {
              "type": "boolean",
              "default": true
            },
            "sidebarTarget": {
              "type": "string",
              "default": "apiSidebar"
            },
            "sidebarInsertPosition": {
              "type": "string",
              "enum": ["replace", "append", "prepend", "before", "after"],
              "default": "replace"
            },
            "sidebarInsertReference": {
              "type": "string"
            },
            "sidebarSectionLabels": {
              "type": "object",
              "properties": {
                "operations": { "type": "string" },
                "types": { "type": "string" }
              },
              "default": {
                "operations": "Operations",
                "types": "Types"
              }
            },
            "introDocs": {
              "type": "array",
              "items": {
                "oneOf": [
                  {
                    "type": "string"
                  },
                  {
                    "type": "object",
                    "properties": {
                      "source": { "type": "string" },
                      "outputPath": { "type": "string" },
                      "id": { "type": "string" },
                      "label": { "type": "string" },
                      "title": { "type": "string" }
                    },
                    "required": ["source"]
                  }
                ]
              },
              "default": []
            }
          },
          "default": {}
        }
      },
      "additionalProperties": true,
      "default": {
        "docusaurus": {}
      }
    }
  }
}
